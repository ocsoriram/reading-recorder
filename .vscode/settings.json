{
    "typescript.preferences.importModuleSpecifier": "relative",
    "javascript.preferences.importModuleSpecifier": "relative",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    },
    "typescript.suggest.autoImports": true,
    "javascript.suggest.autoImports": true,
    "editor.tabSize": 2,               // インデント幅を2スペースに設定
    "editor.insertSpaces": true,       // タブをスペースに変換
    "[typescript]": {                  // TypeScriptファイル用のインデント設定
        "editor.tabSize": 2
    },
    "[typescriptreact]": {             // TypeScript React（.tsx）用のインデント設定
        "editor.tabSize": 2
    },
    "[javascript]": {                  // JavaScriptファイル用のインデント設定
        "editor.tabSize": 2
    },
    "[javascriptreact]": {             // JavaScript React（.jsx）用のインデント設定
        "editor.tabSize": 2
    },
    "errorLens.messageTemplate": "$message",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80, // 必要に応じて調整
    "editor.rulers": [80],// ガイドラインを表示
    
    "editor.parameterHints.enabled": true,
    "editor.suggest.showMethods": true,
    "editor.suggest.insertMode": "insert",
    "typescript.suggest.completeFunctionCalls": true

}